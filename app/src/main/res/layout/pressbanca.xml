<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".PressBancaDetalleActivity">

    <!-- Botón Volver Atrás -->
    <Button
        android:id="@+id/buttonVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/design_default_color_error"

        android:elevation="4dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="Volver"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Título del Ejercicio -->
    <TextView
        android:id="@+id/tituloEjercicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="24dp"
        android:text="Press de Banca con Barra"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/background"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonVolver" />

    <!-- Contenedor del video con mensaje de error -->
    <RelativeLayout
        android:id="@+id/videoContainer"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        android:background="#1E1E1E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloEjercicio">

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/mensajeError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/logoapp"
            android:text="Video no disponible"
            android:visibility="gone" />

    </RelativeLayout>

    <!-- Resto del código igual... -->
    <LinearLayout
        android:id="@+id/controlesVideo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoContainer">

        <Button
            android:id="@+id/buttonReproducir"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/design_default_color_error"
            android:elevation="4dp"
            android:padding="12dp"
            android:text="Reproducir"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/buttonPausar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/design_default_color_error"
            android:elevation="4dp"
            android:padding="12dp"
            android:text="Pausar"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/background"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/controlesVideo">

        <TextView
            android:id="@+id/descripcionEjercicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:text="• Acuéstate boca arriba en un banco plano\n• Agarra la barra con las manos ligeramente más anchas que los hombros\n• Baja la barra controladamente hasta el pecho\n• Empuja la barra hacia arriba hasta extender completamente los brazos\n• Mantén los pies firmes en el suelo y la espalda apoyada\n\nMúsculos trabajados:\n• Pectoral mayor\n• Deltoides anterior\n• Tríceps\n\nSeries y repeticiones recomendadas:\n• 4 series de 8-12 repeticiones" />

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>