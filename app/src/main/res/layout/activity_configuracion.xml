<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivPerfilUsuario"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true"
                app:shapeAppearanceOverlay="@style/CircleImage"
                android:src="@android:drawable/ic_menu_camera"
                app:strokeColor="@color/white"
                app:strokeWidth="2dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/ivPerfilUsuario"
                android:layout_alignEnd="@id/ivPerfilUsuario"
                app:fabSize="mini"
                app:srcCompat="@android:drawable/ic_menu_edit"
                app:tint="@color/negro_app"
                android:backgroundTint="@color/white"
                android:clickable="false"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="15dp"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INFORMACIÓN PERSONAL"
                    android:textColor="#FFD700"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/etNombrePerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre completo"
                    android:textColor="@android:color/white"
                    android:textColorHint="#666666"
                    android:backgroundTint="#333333"
                    android:inputType="textPersonName" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/etEdadPerfil"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Edad"
                        android:inputType="number"
                        android:textColor="@android:color/white"
                        android:textColorHint="#666666"
                        android:backgroundTint="#333333" />

                    <Spinner
                        android:id="@+id/spinnerSexo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_gravity="center_vertical"
                        android:backgroundTint="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="15dp"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <EditText
                    android:id="@+id/etPesoPerfil"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Peso (kg)"
                    android:inputType="numberDecimal"
                    android:textColor="@android:color/white"
                    android:textColorHint="#666666"
                    android:backgroundTint="#333333" />

                <EditText
                    android:id="@+id/etAlturaPerfil"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Altura (cm)"
                    android:inputType="number"
                    android:textColor="@android:color/white"
                    android:textColorHint="#666666"
                    android:backgroundTint="#333333" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#252525"
            app:cardCornerRadius="15dp"
            android:layout_marginBottom="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TU ÍNDICE DE MASA CORPORAL (IMC)"
                    android:textColor="#BBBBBB"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvValorIMC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - "
                    android:textColor="@android:color/white"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvEstadoIMC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Introduce peso y altura"
                    android:textColor="#FFD700"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnGuardarPerfil"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="GUARDAR CAMBIOS"
            android:textColor="@color/negro_app"
            android:textStyle="bold"
            android:backgroundTint="@android:color/white"
            app:cornerRadius="15dp" />

    </LinearLayout>
</ScrollView>