<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".musculosGeneral.espalda">

    <!-- Botón Salir -->

    <!-- Título -->
    <Button
        android:id="@+id/buttonSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/design_default_color_error"
        android:elevation="4dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="@string/btnSalir"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tituloEspalda"
        android:background="@drawable/background"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/buttonSalir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tabla de ejercicios -->
    <TableLayout
        android:id="@+id/tablaEjercicios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:stretchColumns="1"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- FILA 1 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@null"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/es_dominadas"
                android:contentDescription="Ejercicio 1" />

            <TextView
                android:id="@+id/ejercicio1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:text="@string/ej1esp"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </TableRow>

        <!-- FILA 2 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@null"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/es_jalon"
                android:contentDescription="Ejercicio 2" />

            <TextView
                android:id="@+id/ejercicio2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:text="@string/ej2esp"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </TableRow>

        <!-- FILA 3 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@null"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/es_remo"
                android:contentDescription="Ejercicio 3" />

            <TextView
                android:id="@+id/ejercicio3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:text="@string/ej3esp"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </TableRow>

        <!-- FILA 4 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@null"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/p_pesomuerto"
                android:contentDescription="Ejercicio 4" />

            <TextView
                android:id="@+id/ejercicio4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:text="@string/ej4esp"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
